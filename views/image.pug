  url("/webpage/fonts/Larsseit/Larsseit.otf") format("opentype"),
  url("/webpage/fonts/Larsseit/larsseit.svg") format("svg"),
  url("/webpage/fonts/Larsseit/larsseit.eot");
  font-weight: normal;
  font-style: normal;
  }
  @font-face {
  font-family: "larsseititalic";
  src: url("/webpage/fonts/Larsseit Italic/larsseit-italic.woff2") format("woff2"),
  url("/webpage/fonts/Larsseit Italic/larsseit-italic.woff") format("woff"),
  url("/webpage/fonts/Larsseit Italic/larsseit-italic.ttf") format("truetype"),
  url("/webpage/fonts/Larsseit Italic/Larsseit-Italic.otf") format("opentype"),
  url("/webpage/fonts/Larsseit Italic/larsseit-italic.svg") format("svg"),
  url("/webpage/fonts/Larsseit Italic/larsseit-italic.eot");
  font-weight: normal;
  font-style: normal;
  }
  @font-face {
  font-family: "larsseitbold";
  src: url("/webpage/fonts/Larsseit Bold/larsseit-bold.woff2") format("woff2"),
  url("/webpage/fonts/Larsseit Bold/larsseit-bold.woff") format("woff"),
  url("/webpage/fonts/Larsseit Bold/larsseit-bold.ttf") format("truetype"),
  url("/webpage/fonts/Larsseit Bold/Larsseit-Bold.otf") format("opentype"),
  url("/webpage/fonts/Larsseit Bold/larsseit-bold.svg") format("svg"),
  url("/webpage/fonts/Larsseit Bold/larsseit-bold.eot");
  font-weight: normal;
  font-style: normal;
  }
  @font-face {
  font-family: "larsseitbolditalic";
  src: url("/webpage/fonts/Larsseit Bold Italic/larsseit-bolditalic.woff2") format("woff2"),
  url("/webpage/fonts/Larsseit Bold Italic/larsseit-bolditalic.woff") format("woff"),
  url("/webpage/fonts/Larsseit Bold Italic/larsseit-bolditalic.ttf") format("truetype"),
  url("/webpage/fonts/Larsseit Bold Italic/Larsseit-BoldItalic.otf") format("opentype"),
  url("/webpage/fonts/Larsseit Bold Italic/larsseit-bolditalic.svg") format("svg"),
  url("/webpage/fonts/Larsseit Bold Italic/larsseit-bolditalic.eot");
  font-weight: normal;
  font-style: normal;
  }
  img {
  width: calc(100% - 80px);
  margin: 20px;
  max-width: 1400px;
  height: auto;
  border: 3px solid #212121;
  border-radius: 7px;
  }
  .btn {
  background-color: #000000;
  border: none;
  color: #ffffff;
  padding: 12px 16px;
  font-size: 16px;
  cursor: pointer;
  }
  .icons {
  position: absolute;
  top: 11px;
  left: 11px;
  }
  .dl {
  position: relative;
  }
  .download {
  align-items: center;
  justify-content: center;
  background-color: #212121;
  border: none;
  border-radius: 10px;
  color: #ffffff;
  padding: 12px 16px;
  font-size: 16px;
  cursor: pointer;
  }
  body {
  background-color: #000000;
  text-align: center;
  font-size: 20px;
  font-family: "Larsseit", sans-serif;
  color: #ffffff;
  display: table-cell;
  vertical-align: top;
  }
  html,
  body {
  height: 100%;
  }
  html {
  display: table;
  margin: auto;
  }
  img.emoji {
  width: 1em;
  pointer-events: none;
  }
h1 alix
p= "u.kaedehara.xyz/" + `${imageName}`
p= "upload time: " + `${date}`
a(href=`${hostedUrl}files/${imageName}`)
    img(src=`${hostedUrl}files/${imageName}`)
.icons
  a(href='https://kaedehara.xyz')
    button.btn
      i.fa-solid.fa-house
.dl
  button.download(onclick="window.location.href='" + `${hostedUrl}files/${imageName}` + "'")
    span.text
      i.fa-solid.fa-download
      |  Download
