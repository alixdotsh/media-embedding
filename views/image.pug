doctype html
head
  meta(charset='UTF-8')
  script(src='https://twemoji.maxcdn.com/v/latest/twemoji.min.js' crossorigin='anonymous')
  script(src='https://kit.fontawesome.com/e473294955.js' crossorigin='anonymous')
  title= "Image - " + `${imageName}`
  meta(property="og:site_name" content="u.kaedehara.xyz")
  meta(property="og:url" content=`${hostedUrl}files/${imageName}`)
  meta(property="og:description" content=date)
  meta(property="og:image" content=`${hostedUrl}files/${imageName}`)
  meta(property="og:title" content=ogTitle)
  meta(name="theme-color" content="#ff1434")
  meta(name="twitter:card" content="summary_large_image")
  meta(name="twitter:image" content=`${hostedUrl}files/${imageName}`)
  meta(name="twitter:image:src" content=`${hostedUrl}files/${imageName}`)
  meta(name="twitter:description" content=date)
script.
  window.onload = function() {
  twemoji.parse(document.body,
  {folder: 'svg', ext: '.svg'}
  );
  }
style.
